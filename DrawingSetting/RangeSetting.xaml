<Page x:Class="函数画板.RangeSetting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:函数画板"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RangeSetting" Background="#2D2D30">

    <Grid>
        <StackPanel Background="#2D2D30" Margin="10">
            <Label Foreground="White">设置相对位置：</Label>
            <TextBox x:Name="positionGetter" Background="#333333" Foreground="White"></TextBox>
            <Label Foreground="White">设置显示宽度：</Label>
            <TextBox x:Name="unitLengthGetter" Background="#333333" Foreground="White"></TextBox>
        </StackPanel>
    </Grid>
</Page>
