<UserControl x:Class="函数画板.SettingForDoubleFunc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:函数画板"
             mc:Ignorable="d" 
             d:DesignHeight="378.239" d:DesignWidth="364.95">
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="1">
            <StackPanel Background="#2D2D30">
                <Label Foreground="White">图像颜色:</Label>
                <TextBox x:Name="colorGetter" TextWrapping="Wrap" Margin="10,5,10,5" Background="#333333" Foreground="White"/>
                <Button Content="应用" Margin="10,15,10,15" Background="Gray" Foreground="White" Click="ApplySetting"/>
            </StackPanel>

        </Border>
    </Grid>
</UserControl>
